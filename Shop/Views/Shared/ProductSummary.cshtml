@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="row">
        <a class="row col-lg-10 col-sm-6" asp-action="Product" asp-controller="Product" asp-route-id="@Model.Id">
            <div class="col-lg-2 col-sm-2">
                <img class="card-img"
                    src="https://catherineasquithgallery.com/uploads/posts/2021-03/1614553939_1-p-kartinka-yabloka-na-belom-fone-1.jpg"
                    alt="No image" />
            </div>
            <div class="col-lg-10">
                <div class="bg-faded p-1">
                    <h4>
                        @Model.Name
                    </h4>
                    <h5>@Model.Category</h5>
                    <span>@Model.Description</span>
                </div>
            </div>
        </a>
        <div class="col-lg-2 col-sm-2">
            <h3 class="badge badge-pill @(Model.isAvailable ? "badge-primary" : "badge-danger")" style="float:right">
                @(Model.isAvailable ? @Model.Price.ToString("C") : "Unavailable")
            </h3>
            @* <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
