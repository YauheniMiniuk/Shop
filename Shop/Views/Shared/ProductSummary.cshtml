@model Product

<div class="card card-outline-primary m-1 ">
    <div class="row">
        <a class="row align-content-center text-decoration-none " style="color:black;"
           asp-action="Product" asp-controller="Product" asp-route-productName="@Model.Name">
            <div class="col-sm-12 col-md-2 col-lg-2">
                <img class="card-img" src="~/images/products/product-@Model.Id/1.png" alt="No image" />
            </div>
            <div class="col-sm-12 col-md-8 col-lg-8 align-content-center text-lg-start text-center" >
                <div class="text-sm-center text-md-start text-lg-start p-1 align-self-center">
                    <h4>
                        @Model.Name
                    </h4>
                    <span>@Model.Description</span>
                </div>
            </div>  
            <div class="col-sm-12 col-md-2 col-lg-2 text-lg-end text-md-end text-center">
                <h3 class="btn active rounded-pill @(Model.isAvailable ? "bg-primary" : "bg-danger")">
                    <span>@(Model.isAvailable ? @Model.Price.ToString("C") : "Unavailable")</span>
                </h3>
